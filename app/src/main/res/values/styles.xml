<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:popupAnimationStyle">@style/AppTheme.ActionBar.Popup.Animation</item>
    </style>

    <style name="AppTheme.ActionBar.Popup">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="AppTheme.ActionBar.Popup.Animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_enter</item>
        <item name="android:windowExitAnimation">@anim/menu_enter</item>
    </style>

</resources>
